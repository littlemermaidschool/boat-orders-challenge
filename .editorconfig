# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
indent_style = tab
indent_size = 4

[*.yml]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.tf]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.sql]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
